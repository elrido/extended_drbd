# Generated by Chef for <%= node[:fqdn] %>

global {
  usage-count no;
}
common {
  disk {
    on-io-error detach;
  }
  protocol C;
}
resource <%= @resource %> {
  on <%= @primary_short_hostname %> {
    device    <%= node['drbd']['dev'] %>;
    disk      <%= node['drbd']['disk'] %>;
    address   <%=@primary_ip%>:<%= node['drbd']['port'] %>;
    meta-disk internal;
  }
  on <%= @secondary_short_hostname %> {
    device    <%= node['drbd']['dev'] %>;
    disk      <%= node['drbd']['disk'] %>;
    address   <%= @secondary_ip %>:<%= node['drbd']['port'] %>;
    meta-disk internal;
  }
  syncer {
     rate <%= node['drbd']['syncrate']%>;
  }
}

